{% extends 'templates/default.twig' %}

{% block title %} Setting Profile {% endblock %}
{% block current %} Setting Profile {% endblock %}
{% block content %}

<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <a class="list-group-item active main-color-bg">
              <span align="center" aria-hidden="true"><i class="icon-file"></i></span><i class="fa fa-cogs"></i>&nbsp; Setting Profile
            </a>
              <div class="box box-primary">
                <div class="box-header">
                
           <form action="{{path_for('user.setting.profile')}}" method="POST" enctype="multipart/form-data">
            <div class="col-lg-6">
                <div class="box-body">
                    <div class="form-group {{ errors.name ? 'has-error' : '' }}">
                        <label>Nama:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-user"></i>
                            </div>
                            <input type="text" name="name" class="form-control"
                             value="{{ login.name }}" placeholder="Your Name">
                        </div>
                        {% if errors.name %}
                        <span class="help-block">{{errors.name | first}}</span>
                        {% endif %}
                    </div>

                    <div class="form-group {{ errors.username ? 'has-error' : '' }}" >
                        <label>Username:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-users"></i>
                            </div>
                            <input type="text" name="username" class="form-control"
                            value="{{ login.username }}" placeholder="Your Username">
                        </div>
                        {% if errors.username %}
                        <span class="help-block">
                            {{errors.username | first}}</span>
                            {% endif %}
                    </div>


                    <div class="form-group {{ errors.gender ? 'has-error' : '' }}">
                        <label>Jenis Kelamin :</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-universal-access"></i>
                            </div>
                            <select name="gender" class="form-control" id="">
                                <option value="Laki-laki" {% if  login.gender == "L" %}
                                 selected="selected"{% endif %}>Laki-Laki</option>
                                <option value="Perempuan" {% if  login.gender == "P" %}
                                 selected="selected"{% endif %}>Perempuan</option>
                            </select>
                        </div>
                        {% if errors.gender %}
                        <span class="help-block">
                            {{errors.gender | first}}</span>
                            {% endif %}
                    </div>

                    <div class="form-group {{ errors.address ? 'has-error' : '' }}">
                        <label>Alamat:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-map-marker"></i>
                            </div>
                            <input type="text" name="address" class="form-control"
                             value="{{ login.address }}" placeholder="Your address">
                        </div>
                        {% if errors.address %}
                        <span class="help-block">{{errors.address | first}}</span>
                        {% endif %}
                    </div>
                    <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                        <label>Email:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            <input type="email" name="email" class="form-control"
                            value="{{ login.email }}" placeholder="Your email">
                        </div>
                        {% if errors.email %}
                        <span class="help-block">{{errors.email | first}}</span>
                        {% endif %}
                    </div> 
                   <!--  <div class="form-group {{ errors.password ? 'has-error' : '' }}">
                        <label>Password:</label>
                        <div class="input-group">
                            <div class="input-group-addon" id="showHide">
                                <i class="fa fa-eye-slash"></i>
                            </div>
                            <input type="password" name="password" class="form-control password"
                            value="{{ login.password }}" placeholder="Your password">
                        </div>
                        {% if errors.password %}
                        <span class="help-block">{{errors.password | first}}</span>
                        {% endif %}
                    </div> -->
                    <div class="form-group {{ errors.phone ? 'has-error' : '' }}">
                        <label>No.Telepon:</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <input type="text" class="form-control input-medium bfh-phone"
                             data-format="+62 ddd ddddddddd" name="phone"
                             value="{{ login.phone }}" placeholder="Your phone">
                        </div>
                        {% if errors.phone %}
                        <span class="help-block">{{errors.phone | first}}</span>
                        {% endif %}
                    </div>
                </div>&nbsp;
                  <button type="submit" class="btn btn-social-button btn-github pull-left" style="margin:20px">
                  <i class="fa fa-cog"></i> Update profile</button>
          </form>

            <a href=""><button type="submit" class="btn btn-social-button btn-github pull-left" style="margin:20px">
             <i class="fa fa-lock"></i> Change password</button></a>
      </div>



    <a href="{{ path_for('user.view.profile') }}"><button type="submit"
         class="btn btn-social-button btn-github pull-right">
         <i class="fa fa-address-book-o"></i>&nbsp; View profile</button></a>
    </div>
             

{% endblock %}