{% extends 'templates/default.twig' %}

{% block title %} Beranda {% endblock %}

{% block current %} Beranda {% endblock %}

{% block content %}
<!-- <div class="row-fluid">
    <div class="span12"> -->
        <div class="widget-box" style="margin-top:0px;">
            <a class="list-group-item active main-color-bg">
              <span align="center" aria-hidden="true"><i class="icon-file"></i></span> Timeline
            </a>
            <div class="widget-content" style="padding-left:30px; padding-right:30px;">
                <ul class="recent-posts">
                    {% for item in data %}
                    <li>
                        {% if item.reported_at == null and item.creator_image != null %}
                        <div class="user-thumb"> <img width="40" height="40" alt="User"
                            src="{{ base_url() }}/assets/images/{{ item.creator_image }}">
                        </div>
                        {% elseif item.reported_at != null and item.user_image != null %}
                        <div class="user-thumb"> <img width="40" height="40" alt="User"
                            src="{{ base_url() }}/assets/images/{{ item.user_image }}">
                        </div>
                        {% else %}
                        <div class="user-thumb"> <img width="40" height="40" alt="User"
                            src="{{ base_url() }}/assets/images/avatar.png">
                        </div>
                        {% endif %}

                        <div class="article-post">

                            {% if item.reported_at == null %}
                            <h6>{{ item.creator }} membuat item di grup {{ item.group_name }}</h6>
                            <br>
                            <span class="user-info"> <b>
                                <span class="date badge badge-warning">{{ item.item }}
                                </span> >
                                <span class="date badge badge-success">{{ item.group_name }}
                                </span></b><br> {{ item.created_at }}
                            </span>
                            {% else %}
                            <h6>{{ item.user }} melaporkan item di grup {{ item.group_name }}</h6>
                            <br>
                            <span class="user-info"> <b>
                                <span class="date badge badge-warning">{{ item.item }}
                                </span> >
                                <span class="date badge badge-success">{{ item.group_name }}
                                </span></b><br> {{ item.reported_at }}
                            </span>
                            {% endif %}

                        {% if item.image != null %}
                        <br><br>

                        <img width="80%" style="max-width: 300px;"alt="Image item"
                        src="{{ base_url() }}/assets/images/{{ item.image[0] }}">
                        {% endif %}
                        <br><br>
                        <p>{{ item.description }}</p>
                        <br><a href="{{ base_url() }}/item/{{item.id}}"  title="Lihat detail item"
                         class="btn btn-primary btn-mini">{{ item.comment }} komentar</a><br><hr>
                    </div>
                </li>

                {% endfor %}

                <nav aria-label="...">
                    <ul class="pager">
                        <div class="pagination alternate">
                          <ul>
                            <li class="{% if pagination.current == 1 %}disabled{% endif %}">
                                <a href="{{ base_url() }}/home?page={{ pagination.current - 1 }}">Sebelumnya</a></li>
                            <li class="active"> <a href="{{ base_url() }}/home?page={{ pagination.current }}">
                            {{ pagination.current }}</a></li>
                            <li class="{% if pagination.current == pagination.total_page %}disabled{% endif %}">
                                <a href="{{ base_url() }}/home?page={{ pagination.current + 1 }}">Selanjutnya</a></li>
                          </ul>
                        </div>
                    </ul>
                </nav>

                <!-- <hr style="margin-top:10px;margin-bottom:10px;" > -->
            </li>
        </ul>
    </div>
</div>


