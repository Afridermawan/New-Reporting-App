
{% extends 'templates/default.twig' %}

{% block title %} List Group {% endblock %}

{% block current %} List Group {% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box" style="margin-top:0px;">
            <div class="widget-title"> <span class="icon"> <i class="icon-file"></i> </span>
                <h5>Daftar Group</h5>
                <span style="float:right;">
                    <div class="btn-group">
                        <a class="btn btn-primary" href="#"><i class="icon-collapse"></i> Lainnya</a>
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-caret-down"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="" data-toggle="modal" data-target="#squarespaceModal"><i class="icon-fixed-width icon-pencil"></i> Buat group</a></li>
                            <!-- <li><a href="#"><i class="icon-fixed-width icon-trash"></i> Info group</a></li> -->
                        </ul>
                    </div>
                </span>
            </div>
            <div class="widget-content" style="padding-left:30px; padding-right:30px;">
                <ul class="recent-posts">

                    {% for data in data %}
                    <li>
                        <form action="" method="POST">
                        <div class="row">
                        		<div class=" col-md-3">
                        			<div class="thumb1">
                        			<center>
                                        <h1><a href="">
                                            <img src="{{ base_url() }}/assets/images/{{ data.image }}"
                                            alt="{{ data.name }}" height="234" width="234" style="margin:20px">
                                        </a><h1>
                                    </center>
                        			</div>
                                </div>
                                <div class="col-sm-2 col-md-7">
                                    <ul>
                                        <li><a href="{{ path_for('group.item', {'group': data.group_id}) }}"><span class="badge">{{ data.name }}</span></a></li>
                                        <li>{{ data.description }}</li>
                                    </ul>
                                </div>
                            </div>
                    </li>
                    {% endfor %}
                    <nav aria-label="...">
                        <ul class="pager">
                            {% if pagination.current > pagination.first_page %}
                                <li class="previous"><a href="{{ base_url() }}/group?page={{ pagination.first_page }}">
                                    <span aria-hidden="true">&larr;</span> Halaman pertama</a></li>
                                <li class="previous"><a href="{{ base_url() }}/group?page={{ pagination.current - 1 }}">
                                    <span aria-hidden="true">&larr;</span> Kembali</a></li>
                            {% endif %}
                            {% if pagination.current < pagination.total_page %}
                                <li class="next"><a href="{{ base_url() }}/group?page={{ pagination.total_page }}">
                                    Halaman terakhir <span aria-hidden="true">&rarr;</span></a></li>
                                <li class="next"><a href="{{ base_url() }}/group?page={{ pagination.current + 1 }}">
                                    Selanjutnya <span aria-hidden="true">&rarr;</span></a></li>
                            {% endif %}
                          </ul>
                    </nav>
                        <hr style="margin-top:10px;margin-bottom:10px;" >
                    </form>
                </ul>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<!-- <div class="center"><button data-toggle="modal" data-target="#squarespaceModal" class="btn btn-primary center-block">Click Me</button></div> -->

<!-- line modal -->
<div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
            <h3 class="modal-title" id="lineModalLabel">Tambah Group</h3>
        </div>
        <div class="modal-body">
       
            <!-- content goes here -->
            <form action="{{ base_url() }}/pic/create" method='POST'>
              <div class="form-group">
                <label for="exampleInputEmail1">Name</label>
                <input type="text" name="name" class="form-control" placeholder="input name group">
              </div>
              <div class="form-group">
                <label for="exampleTextarea">Description</label>
                <textarea name="description" class="form-control" rows="3"></textarea>
              </div>
        </div>
        <div class="modal-footer">
            <div class="btn-group btn-group-justified" role="group" aria-label="group button">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-group-justified" data-dismiss="modal"  role="button">Close</button>
                </div>
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-primary btn-hover-green" >Save</button>
                </div>
            </div>
        </div>
            </form>
    </div>
  </div>
</div>
{% endblock %}
